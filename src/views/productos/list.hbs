<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de Productos</h3>
        {{#if productos}}
            <table class="table text-center">
                <thead>
                    <tr class="table-primary">
                        <th scope="col" class="col-4">Nombre del Producto</th>
                        <th scope="col">Precio</th>
                        <th scope="col">Stock</th>
                        <th scope="col">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each productos}}
                        <tr>
                            <td>{{product_name}}</td>
                            <td>{{price}}</td>
                            <td>{{is_stock}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/api/v1/products/{{product_id}}" class="btn btn-warning p-2 " data-toggle="tooltip" title="Editar">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/api/v1/delete/{{product_id}}" class="btn btn-danger p-2" data-toggle="tooltip" title="Eliminar">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-primary">
                        <td colspan="4">REGISTRO DE PRODUCTOS</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes crear un producto</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a un producto</p>
                    <a href="/add" class="btn btn-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>