<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UN PRODUCTO</h3>
                </div>
                <div class="card-body">
                    <form action="/api/v1/products/{{product.product_id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="product_name" class="input-group-text">Nombre del Producto</label>
                        <input class="form-control" type="text" name="product_name" id="product_name" value="{{product.product_name}}" placeholder="Indica nombre del Procuto" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="price" class="input-group-text">Precio</label>
                        <input class="form-control" type="text" name="price" id="price" placeholder="Precio" value="{{product.price}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="is_stock" class="input-group-text">Stock</label>
                        <input class="form-control" type="boolean" name="is_stock" id="is_stock" value="{{product.is_stock}}" placeholder="0(sin stock) 1(en stock)" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success">Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>